generator client {
  provider = "prisma-client-js"
}

// Configuraci√≥n del seed
// Ejecutar con: npx prisma db seed

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  cliente
  empresa
  admin
}

enum ReservaEstado {
  pendiente
  confirmada
  completada
  cancelada
}

enum NegocioEstado {
  pendiente
  aprobada
  rechazada
}

model User {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  email     String   @unique
  password  String
  telefono  String?
  ciudad    String?
  avatar    String?  @db.Text
  rol       UserRole @default(cliente)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  negocios     Negocio[]
  reservas     Reserva[]
  chatsCliente Chat[]     @relation("ChatCliente")
  chatsEmpresa Chat[]     @relation("ChatEmpresa")
  chatsAdmin   Chat[]     @relation("ChatAdmin")
  favoritos    Favorito[]
  resenas      Resena[]
  mensajes     Mensaje[]  @relation("MensajeUsuario")

  @@map("users")
}

model Categoria {
  id          Int      @id @default(autoincrement())
  nombre      String   @unique
  icono       String
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  negocios Negocio[]

  @@map("categorias")
}

model Provincia {
  id        Int      @id @default(autoincrement())
  nombre    String   @unique
  createdAt DateTime @default(now())

  municipios Municipio[]
  negocios   Negocio[]

  @@map("provincias")
}

model Municipio {
  id          Int      @id @default(autoincrement())
  nombre      String
  provinciaId Int
  createdAt   DateTime @default(now())

  provincia Provincia @relation(fields: [provinciaId], references: [id], onDelete: Cascade)
  negocios   Negocio[]

  @@unique([nombre, provinciaId])
  @@map("municipios")
}

model Negocio {
  id             Int           @id @default(autoincrement())
  nombre         String
  direccion      String
  telefono       String
  email          String
  descripcion    String?       @db.Text
  foto           String?
  categoriaId    Int?
  provinciaId    Int?
  municipioId    Int?
  propietarioId  Int
  estado         NegocioEstado @default(pendiente)
  calificacion   Float         @default(0)
  totalResenas   Int           @default(0)
  precioPromedio Float         @default(0)
  horarios       Json?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  categoria   Categoria?    @relation(fields: [categoriaId], references: [id], onDelete: Cascade)
  provincia   Provincia?    @relation(fields: [provinciaId], references: [id], onDelete: Cascade)
  municipio   Municipio?    @relation(fields: [municipioId], references: [id], onDelete: Cascade)
  propietario User          @relation(fields: [propietarioId], references: [id], onDelete: Cascade)
  servicios   Servicio[]
  reservas    Reserva[]
  chats       Chat[]
  fotos       NegocioFoto[]
  resenas     Resena[]
  favoritos   Favorito[]

  @@map("negocios")
}

model NegocioFoto {
  id        Int      @id @default(autoincrement())
  negocioId Int
  url       String
  orden     Int      @default(0)
  createdAt DateTime @default(now())

  negocio Negocio @relation(fields: [negocioId], references: [id], onDelete: Cascade)

  @@map("negocio_fotos")
}

model Servicio {
  id          Int      @id @default(autoincrement())
  negocioId   Int
  nombre      String
  descripcion String?  @db.Text
  precio      Float
  duracion    Int
  categoria   String?
  activo      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  negocio  Negocio   @relation(fields: [negocioId], references: [id], onDelete: Cascade)
  reservas Reserva[]

  @@map("servicios")
}

model Reserva {
  id          Int           @id @default(autoincrement())
  clienteId   Int
  negocioId   Int
  servicioId  Int
  fecha       DateTime
  hora        String
  estado      ReservaEstado @default(pendiente)
  precioTotal Float
  notas       String?       @db.Text
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  cliente  User     @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  negocio  Negocio  @relation(fields: [negocioId], references: [id], onDelete: Cascade)
  servicio Servicio @relation(fields: [servicioId], references: [id], onDelete: Restrict)

  @@map("reservas")
}

model Chat {
  id              Int      @id @default(autoincrement())
  clienteId       Int?
  empresaId       Int?
  adminId         Int?
  negocioId       Int?
  tipo            String   @default("cliente-empresa") // "cliente-empresa", "empresa-admin", "cliente-admin"
  noLeidosCliente Int      @default(0)
  noLeidosEmpresa Int      @default(0)
  noLeidosAdmin   Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  cliente  User?     @relation("ChatCliente", fields: [clienteId], references: [id], onDelete: Cascade)
  empresa  User?     @relation("ChatEmpresa", fields: [empresaId], references: [id], onDelete: Cascade)
  admin    User?     @relation("ChatAdmin", fields: [adminId], references: [id], onDelete: Cascade)
  negocio  Negocio?  @relation(fields: [negocioId], references: [id], onDelete: Cascade)
  mensajes Mensaje[]

  @@map("chats")
}

model Mensaje {
  id        Int      @id @default(autoincrement())
  chatId    Int
  remitente String
  texto     String   @db.Text
  leido     Boolean  @default(false)
  createdAt DateTime @default(now())
  usuarioId Int?

  chat    Chat  @relation(fields: [chatId], references: [id], onDelete: Cascade)
  usuario User? @relation("MensajeUsuario", fields: [usuarioId], references: [id], onDelete: SetNull)

  @@map("mensajes")
}

model Resena {
  id           Int      @id @default(autoincrement())
  clienteId    Int
  negocioId    Int
  reservaId    Int?
  calificacion Int
  comentario   String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cliente User    @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  negocio Negocio @relation(fields: [negocioId], references: [id], onDelete: Cascade)

  @@unique([clienteId, negocioId, reservaId])
  @@map("resenas")
}

model Favorito {
  id        Int      @id @default(autoincrement())
  clienteId Int
  negocioId Int
  createdAt DateTime @default(now())

  cliente User    @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  negocio Negocio @relation(fields: [negocioId], references: [id], onDelete: Cascade)

  @@unique([clienteId, negocioId])
  @@map("favoritos")
}
