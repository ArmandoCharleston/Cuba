{
  "name": "cuba-connect",
  "version": "1.0.0",
  "description": "Cuba Connect - Full-stack booking platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd cuba-connect-ui && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd cuba-connect-ui && npm run build",
    "start": "cd server && npx prisma generate && npx prisma migrate deploy && node dist/server.js",
    "install:all": "npm install && cd server && npm install && cd ../cuba-connect-ui && npm install",
    "prisma:generate": "cd server && npm run prisma:generate",
    "prisma:migrate": "cd server && npm run prisma:migrate"
  },
  "keywords": ["cuba", "booking", "platform"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


